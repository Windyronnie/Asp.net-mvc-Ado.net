}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Insert</title>
    <script src="~/Scripts/jquery-1.8.2.min.js"></script>
    <script>
        $(function () {
            $("#sub").click(function () {
                var name = $("#S_Name").val();
                var No = $("#S_No").val();
                var select = $("#Select").find("option:selected").val();
                var radio = sex = $("input[name=state]:checked").val();
                $.post("/Home/Insert", { name: name, no: No, select: select, radio: radio }, function (data) {
                    if (data == "true") {
                        alert("添加成功");
                        location.href = "/Home/Index";
                    }
                    else {
                        alert("添加失败");
                    }
                })
            })
        })
    </script>
</head>
<body>
    <div>
        <p>姓名:@Html.TextBox("S_Name")</p>
        <p>学号:@Html.TextBox("S_No")</p>
