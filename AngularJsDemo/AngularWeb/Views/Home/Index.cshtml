@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Index</title>
    <script src="~/Scripts/angular.min.js"></script>
    <script src="~/Scripts/jquery-1.8.2.min.js"></script>
    <script src="~/Scripts/darktooltip-master/js/jquery.darktooltip.min.js"></script>
    <link href="~/Scripts/darktooltip-master/css/darktooltip.min.css" rel="stylesheet" />
    <script>
        var app = angular.module('myapp', []);
        app.controller('customer', function ($scope, $http) {
            $scope.content=@Html.Raw(ViewBag.stu);
        })
        $(function(){
            $(".out").darkTooltip({
                opacity:1,
                gravity:'west'
            });
        })
    </script>
</head>
<body ng-app="myapp" ng-controller="customer">
    <div>
        <table style="width:600px;cellspacing:0px;cellpadding:0px; " >
            <tr>
                <td>编号</td>
                <td>学号</td>
                <td>班级</td>
                <td>姓名</td>
                <td>状态</td>
                <td>详细信息</td>
            </tr>
            <tr ng-repeat="content in content" style="border:1px solid red;" >
                <td ng-bind="content.S_Id"></td>
                <td ng-bind="content.S_No"></td>
                <td ng-bind="content.S_C_Id"></td>
                <td ng-bind="content.S_Name"></td>
                <td ng-bind="content.S_state"></td>
                <td><a href="#" class="out" data-tooltip="#s_{{content.S_Id}}">详细信息</a></td>
            </tr>
        </table>

        <div id="s_{{content.S_Id}}" ng-repeat="content in content" style="border:1px solid red;display:none;">
            <h4>详细信息</h4>
            <ul>
                <li>编号:{{content.S_Id}}</li>
                <li>学号:{{content.S_No}}</li>
                <li>班级:{{content.S_C_Id}}</li>
                <li>姓名:{{content.S_Name}}</li>
                <li>状态:{{content.S_state}}</li>
            </ul>
        </div>
    </div>
</body>
</html>
